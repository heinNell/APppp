{
  "name": "transportmat-monorepo-lean",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Fleet Management (Vite React + Express API)",
  "main": "src/main.tsx",
  "scripts": {
    "dev": "concurrently -n FRONTEND,BACKEND -c bgBlue.bold,bgGreen.bold \"vite --host\" \"nodemon --exec ts-node src/main.tsx\"",
    "frontend": "vite --host",
    "backend": "nodemon --exec ts-node src/main.tsx",
    "start": "ts-node src/main.tsx",
    "build": "vite build",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@mui/material": "^5.15.20",
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.24.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.5.0",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2",
    "vite": "^5.3.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.4.0"
}